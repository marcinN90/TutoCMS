@model Tuto.Data.Models.WebsiteDetails
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["message"] != null)
{
    <div class="alert alert-primary" role="alert">
        @TempData["message"]
    </div>
}
<div class="col-md-6">
    <h2>Configuration</h2>
    <form asp-action="Index" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="OwnerEmail"></label>
            <input asp-for="OwnerEmail" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="GoogleAnalyticsCode"></label>
            <textarea asp-for="GoogleAnalyticsCode" class="form-control" rows="10"></textarea>
        </div>
        <div class="text-center">
            <button class="btn btn-primary" type="submit">Save</button>
            <a asp-controller="admin" asp-action="index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
