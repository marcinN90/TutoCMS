@model List<Tuto.Data.Models.Entry>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-info">
        @TempData["message"]
    </div>
}

<h2>Wpisy</h2>
<a asp-action="create" class="btn btn-primary">Create new</a>
<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Seo Description</th>
            <th>Category</th>
            <th>Last Revision Date</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Id</td>
                <td>@entry.Title</td>
                <td>@entry.SeoDescription</td>
                <td>@entry.Category.Title</td>
                <td>@entry.LastRevisionAt</td>
                <td>
                    <a asp-action="details" asp-route-id="@entry.Id" class="btn btn-success btn-sm">Details</a>
                    <a asp-action="edit" asp-route-id="@entry.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="delete" asp-route-id="@entry.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
