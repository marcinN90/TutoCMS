@model IEnumerable<Tuto.Data.Models.HomePageSettings>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descritpion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SeoDescription)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descritpion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeoDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Title">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Title">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Title">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
