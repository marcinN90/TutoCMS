@model  Tuto.UI.Models.Home.HomePageModel
@{
    ViewData["Title"] = Model.HomePageTitle + " - " + Model.WebSiteTitle;
    ViewData["SeoDescription"] = Model.SeoDescription;
}
<h1>@Model.HomePageTitle</h1>
<p>@Model.Description</p>

@foreach (var item in Model.Categories)
{
    @item.Title
    <p>Części: @item.EntriesCounter</p>
    <ul>
        @foreach (var entry in item.Entires)
        {
            <li><a asp-controller="library" asp-action="showentry" asp-route-id="@entry.Id">@entry.Title</a> </li>
        }
    </ul>
}

